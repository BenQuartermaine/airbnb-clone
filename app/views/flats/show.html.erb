 <div class="card m-3" style="max-width: 44rem;">
        <img src="https://source.unsplash.com/random" width="100%" alt="unsplash random">
        <div class="card-body">
          <h5><%= @flat.address %></h5>
          <p><%= @flat.description %></p>
          <div class="d-flex justify-content-between w-100">
            <p>Price: <%= @flat.price %></p>
           <p>Capacity: <%= @flat.capacity %></p> 
          </div>
          <%= link_to 'Edit', edit_flat_path(@flat), class: 'btn btn-secondary' %>
          <%= link_to 'Remove', flat_path(@flat), class: 'btn btn-danger', method: :delete %>
      </div>
    </div>